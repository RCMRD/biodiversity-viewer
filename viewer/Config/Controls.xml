<Controls>
  <Control Name="EditorConfiguration">
    <Control.ConfigData>
      <EditorConfiguration xmlns:i="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schemas.datacontract.org/2004/07/ESRI.ArcGIS.Mapping.Controls.Editor">
        <AutoSelect>true</AutoSelect>
        <LayerIds xmlns:d2p1="http://schemas.microsoft.com/2003/10/Serialization/Arrays" />
        <ShowAttributesOnAdd>true</ShowAttributesOnAdd>
        <AutoSave>true</AutoSave>
        <EditingShapesEnabled>true</EditingShapesEnabled>
      </EditorConfiguration>
    </Control.ConfigData>
  </Control>
  <Control Name="MapContents">
    <Control.ConfigData>
      <MapContentsConfiguration xmlns:i="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schemas.datacontract.org/2004/07/ESRI.ArcGIS.Mapping.Controls.MapContents">
        <Mode>Contents</Mode>
        <ContextMenuToolPanelName>LayerConfigurationContextMenuContainer</ContextMenuToolPanelName>
        <AllowLayerSelection>true</AllowLayerSelection>
      </MapContentsConfiguration>
    </Control.ConfigData>
  </Control>
</Controls>